{
  "files.exclude": {
    "**/*.aux": true,
    "**/*.log": true,
    "**/*.fls": true,
    "**/*.xdv": true,
    "**/*.fdb_latexmk": true,
    "**/*.synctex.gz": true
  },
  "latex-utilities.mathPreview.enable": true,
  "latex-utilities.mathPreview.scale": 1.4,
  "latex-utilities.mathPreview.fontSize": 12,
  
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.view.pdf.viewer": "tab",
  
  "latex-workshop.synctex.afterBuild.enabled": true,
  
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (xelatex)",
      "tools": ["xelatex"]
    }
  ],
  
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "%DOC%"
      ]
    }
  ]

}
